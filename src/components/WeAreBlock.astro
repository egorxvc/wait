<div class="container mx-auto py-28 flex items-center">
  <svg
    width="20"
    height="16"
    viewBox="0 0 20 16"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M10 15.5L0 0L10 3.5L19.5 0L10 15.5Z" fill="black"></path>
  </svg>
  <span class="uppercase font-light whitespace-nowrap ml-2 text-xl opacity-0" id="whoWeAreText">кто мы</span>
  <div class="ml-4 w-0 h-px bg-black" id="expandingLine"></div>
</div>
<div class="relative">
  <div class="container absolute z-10 left-1/2 -translate-x-1/2 mt-10 mx-auto overflow-hidden">
    <div
      class="uppercase text-5xl text-black  bg-gradient-to-r from-secondary to-primary bg-clip-text text-transparent w-full font-light tracking-[0.765rem] leading-tight"
    >
      <div class="text-right overflow-hidden">
        <div class="word">Добро</div>
        <div class="word">пожаловать</div>
      </div>
      <div class="overflow-hidden ">
        <div class="word">в</div>
        <span class="font-bold bg-gradient-to-r from-secondary to-primary bg-clip-text text-transparent word">Oh Wait</span>
        <div class="word">—</div>
        <div class="word">диджитал</div>
      </div>
      <div class="overflow-hidden">
        <div class="word">агентство,</div>
        <div class="word">которое</div>
      </div>
      <div class="overflow-hidden flex flex-wrap gap-4">
        <div class="word">превращает</div>
        <span class="font-bold bg-gradient-to-r from-secondary to-primary bg-clip-text text-transparent word">
            идеи в результаты
        </span>
      </div>
    </div>
  </div>
  <script
    type="module"
    src="https://unpkg.com/@splinetool/viewer@1.9.3/build/spline-viewer.js"
    async></script>
  <spline-viewer
    url="https://prod.spline.design/2PvIpUMlIFVfY-35/scene.splinecode"
    ><img
      src="data:image/png;base64,"
      alt="Spline preview"
      style="width: 100%; height: 100%;"
    /></spline-viewer
  >
</div>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  gsap.to("#whoWeAreText", {
    opacity: 1,
    duration: 1,
    scrollTrigger: {
      trigger: "#whoWeAreText",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse"
    }
  });

  gsap.to("#expandingLine", {
    width: "100%",
    duration: 1.5,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#expandingLine",
      start: "top 80%",
      end: "bottom 20%",
      toggleActions: "play none none reverse"
    }
  });

  const words = document.querySelectorAll('.word');

  words.forEach((word, index) => {
    gsap.fromTo(word, 
      {
        y: "100%",
        opacity: 0
      },
      {
        y: 0,
        opacity: 1,
        duration: 0.5,
        ease: "power2.out",
        stagger:1,
        scrollTrigger: {
          trigger: word,
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse"
        },
        delay: index * 0.1 // Добавляем небольшую задержку для каждого слова
      }
    );
  });
</script>

<style>
  .word {
    display: inline-block;
    transform: translateY(100%);
    opacity: 0;
  }
</style>
