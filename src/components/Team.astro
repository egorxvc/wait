---
import { getCollection } from "astro:content";
import ArrowIcon from "./icons/Arrow-icon.astro";

const team = await getCollection('team');   
---

<div class="team-container container">
    <div class="team-header animate-on-scroll">
        <ArrowIcon direction="bottom" /> <span>Посмотрите, какие крутые ребята 
            у нас работают</span>
    </div>
    <div class="team-list">
        {team.map(item => (
            <div class="team-item">
                <img src={item.data.imageSrc} alt={item.data.firstName + " " + item.data.lastName} class="team-item-img" />
                <div class="team-item-name">{item.data.lastName && <span>{item.data.lastName}</span>} <span>{item.data.firstName}</span></div>
                <div class="team-item-position">{item.data.position}</div>
            </div>
        ))}
    </div>
</div>

<style lang="scss">
    .team-container {
        padding-top: 100px;
        padding-bottom: 100px;
        min-height: 100vh;
        background: linear-gradient(193.78deg, #0A00DD 50%,  #050077 90%);
    }
    .team-header {
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 300;
        font-size: 16px;
        line-height: 19px;
        letter-spacing: 0.05em;
        text-transform: lowercase;
        color: #FFFFFF;
        margin-bottom: 150px;

        // Добавляем адаптивность для мобильных устройств
        @media (max-width: 768px) {
            margin-bottom: 50px;
            font-size: 14px;
        }
    }

    .team-list {
        width: 100%;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;

        // Изменяем сетку для планшетов и мобильных устройств
        @media (max-width: 1024px) {
            grid-template-columns: repeat(2, 1fr);
        }

        @media (max-width: 768px) {
            grid-template-columns: 1fr;
        }
    }

    .team-item-img {
        text-align: center;
        width: auto;
        height: 300px;
        object-fit: cover;
        margin-bottom: 10px;
    }

    .team-item-name {
        font-weight: 300;
        font-size: 30px ;
        line-height: 37px;
        /* or 92% */
        text-transform: uppercase;
        display: flex;
        flex-direction: column;
        color: #FFFFFF;
        & span:first-child {
            font-weight: 700;
        }

        // Уменьшаем размер шрифта для мобильных устройств
        @media (max-width: 768px) {
            font-size: 30px;
            line-height: 28px;
        }
    }

    // Добавляем стили для позиции сотрудника
    .team-item-position {
        color: #FFFFFF;
        font-size: 16px;
        margin-top: 5px;

        @media (max-width: 768px) {
            font-size: 14px;
        }
    }

    // Добавляем отступы для контейнера на мобильных устройствах
    @media (max-width: 768px) {
        .team-container {
            padding-top: 50px;
            padding-bottom: 50px;
        }
    }
</style>
