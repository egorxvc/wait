---
import Socials from "./Socials.astro";
import logoText from "../assets/img/logo-text.png";
---
<div class="footer-placeholder"></div>
<footer class="footer">
    <Socials/>
    <div class="footer-container container">
        <img src={logoText.src} alt="logo" class="footer-logo">
    </div>
</footer>

<style lang="scss">
    .footer {
        background: #000;
        color: #fff;
        padding: 20px;
        height: 100vh;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        width: 100%;
        z-index: 0;
    }

    .footer-placeholder {
        height: 100vh;
    }
    .footer-logo {
        user-select: none;
        pointer-events: none;
        -webkit-user-drag: none;
    }
</style>
